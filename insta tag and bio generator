    <script>
        // Tab functionality
        const tabBtns = document.querySelectorAll('.tab-btn');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                const tabId = btn.getAttribute('data-tab');
                activateTab(tabId);
            });
        });
        
        function activateTab(tabId) {
            // Update buttons
            tabBtns.forEach(btn => {
                if (btn.getAttribute('data-tab') === tabId) {
                    btn.classList.add('active');
                } else {
                    btn.classList.remove('active');
                }
            });
            
            // Update tab content
            tabContents.forEach(content => {
                if (content.id === tabId) {
                    content.classList.add('active');
                } else {
                    content.classList.remove('active');
                }
            });
            
            // Scroll to top of tab content
            document.getElementById(tabId).scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
        
        // Instagram Video Downloader
        function processVideo() {
            const videoUrl = document.getElementById('video-url').value.trim();
            if (!videoUrl) {
                alert('Please enter an Instagram video URL');
                return;
            }
            
            if (!videoUrl.includes('instagram.com')) {
                alert('Please enter a valid Instagram URL');
                return;
            }
            
            // In a real implementation, we would fetch the video from Instagram here
            // For this demo, we'll simulate a success response
            
            document.getElementById('download-btn').innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"></path>
                </svg>
                Processing...
            `;
            
            setTimeout(() => {
                // For demonstration purposes, we'll use a placeholder video
                const videoPreview = document.getElementById('video-preview');
                videoPreview.src = "https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4";
                videoPreview.style.display = "block";
                
                document.getElementById('video-result').style.display = "block";
                
                document.getElementById('download-btn').innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                        <polyline points="7 10 12 15 17 10"></polyline>
                        <line x1="12" y1="15" x2="12" y2="3"></line>
                    </svg>
                    Download Video
                `;
                
                // Scroll to result
                document.getElementById('video-result').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 2000);
        }
        
        // Hashtag Generator
        function generateTags() {
            const topic = document.getElementById('tag-topic').value.trim();
            const count = parseInt(document.getElementById('tag-count').value);
            
            if (!topic) {
                alert('Please enter a topic for your hashtags');
                return;
            }
            
            document.getElementById('generate-tags-btn').innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"></path>
                </svg>
                Generating...
            `;
            
            setTimeout(() => {
                // Generate hashtags based on the topic
                let tags = [];
                
                // Add topic-related hashtags
                const baseHashtags = {
                    travel: ['travel', 'wanderlust', 'travelgram', 'instatravel', 'adventure', 'exploretheworld', 'travelphotography', 'traveladdict', 'globetrotter', 'travellife'],
                    food: ['foodie', 'foodporn', 'foodgasm', 'instafood', 'foodstagram', 'delicious', 'yummy', 'homemade', 'healthyfood', 'foodlover'],
                    fitness: ['fitness', 'gym', 'workout', 'fitnessmotivation', 'fitspo', 'healthylifestyle', 'training', 'strong', 'exercise', 'gains'],
                    fashion: ['fashion', 'style', 'ootd', 'outfit', 'fashionista', 'streetstyle', 'instafashion', 'fashionblogger', 'stylish', 'trendy'],
                    beauty: ['beauty', 'makeup', 'skincare', 'makeuptutorial', 'makeuplover', 'beautyblogger', 'natural', 'glam', 'makeupjunkie', 'cosmetics'],
                    photography: ['photography', 'photooftheday', 'photographer', 'photoshoot', 'naturephotography', 'picoftheday', 'photogram', 'photoart', 'photodaily', 'shutterbug']
                };
                
                // Find the closest match or use generic hashtags
                let matchingCategory = null;
                for (const category in baseHashtags) {
                    if (topic.toLowerCase().includes(category)) {
                        matchingCategory = category;
                        break;
                    }
                }
                
                if (matchingCategory) {
                    tags = [...baseHashtags[matchingCategory]];
                }
                
                // Add generic popular hashtags
                const popularHashtags = ['instagram', 'instagood', 'love', 'photooftheday', 'beautiful', 'happy', 'picoftheday', 'instadaily', 'followme', 'amazing'];
                
                // Add topic-specific tags
                tags.push(topic.toLowerCase());
                tags.push(topic.toLowerCase() + 'lover');
                tags.push(topic.toLowerCase() + 'life');
                tags.push('best' + topic.toLowerCase());
                tags.push(topic.toLowerCase() + 'goals');
                tags.push('daily' + topic.toLowerCase());
                tags.push('instadaily' + topic.toLowerCase());
                tags.push(topic.toLowerCase() + 'addict');
                tags.push(topic.toLowerCase() + 'gram');
                
                // Mix with popular tags and get requested count
                tags = [...new Set([...tags, ...popularHashtags])].slice(0, count);
                
                // Shuffle array
                tags = tags.sort(() => 0.5 - Math.random());
                
                // Display hashtags
                const tagOutput = document.getElementById('tag-output');
                const tagContainer = document.getElementById('tag-container');
                
                tagOutput.innerHTML = tags.map(tag => `#${tag}`).join(' ');
                tagContainer.innerHTML = '';
                
                tags.forEach(tag => {
                    const tagElement = document.createElement('div');
                    tagElement.classList.add('tag');
                    tagElement.textContent = `#${tag}`;
                    tagContainer.appendChild(tagElement);
                });
                
                document.getElementById('tag-result').style.display = "block";
                
                document.getElementById('generate-tags-btn').innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path>
                        <line x1="7" y1="7" x2="7.01" y2="7"></line>
                    </svg>
                    Generate Hashtags
                `;
                
                // Scroll to result
                document.getElementById('tag-result').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 1500);
        }
        
        // Bio Generator
        function generateBio() {
            const bioType = document.getElementById('bio-type').value;
            const keywords = document.getElementById('bio-keywords').value.trim();
            
            if (!keywords) {
                alert('Please enter keywords for your bio');
                return;
            }
            
            document.getElementById('generate-bio-btn').innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 2v4m0 12v4M4.93 4.93l2.83 2.83m8.48 8.48l2.83 2.83M2 12h4m12 0h4M4.93 19.07l2.83-2.83m8.48-8.48l2.83-2.83"></path>
                </svg>
                Creating...
            `;
            
            setTimeout(() => {
                const keywordsList = keywords.split(',').map(k => k.trim()).filter(k => k);
                let bio = '';
                
                // Generate bio based on type and keywords
                const emojis = {
                    travel: ['✈️', '🌎', '🏝️', '🧳', '🗺️', '🌴', '🏞️', '🚗', '🧿', '🌍'],
                    food: ['🍕', '🍔', '🍣', '🍩', '🍷', '🍝', '👨‍🍳', '🍰', '🍴', '☕'],
                    fitness: ['💪', '🏋️‍♀️', '🧘‍♂️', '🏃‍♀️', '🥗', '🏆', '🚴‍♂️', '⚡', '🔥', '✨'],
                    photography: ['📸', '📷', '🎞️', '👁️', '🌆', '🖼️', '📱', '🌅', '🎨', '✨'],
                    music: ['🎵', '🎧', '🎸', '🎹', '🎤', '🎼', '🎻', '🥁', '🎙️', '🔊'],
                    art: ['🎨', '🖌️', '🖼️', '✏️', '🧶', '📝', '🎭', '🎬', '✨', '📚']
                };
                
                // Get relevant emojis
                let relevantEmojis = [];
                keywordsList.forEach(keyword => {
                    for (const category in emojis) {
                        if (keyword.toLowerCase().includes(category)) {
                            relevantEmojis = [...relevantEmojis, ...emojis[category]];
                        }
                    }
                });
                
                // If no specific emojis found, add some generic ones
                if (relevantEmojis.length === 0) {
                    relevantEmojis = ['✨', '💫', '❤️', '🌟', '📍', '🔥', '💭', '🙌', '💯', '⚡'];
                }
                
                // Shuffle and pick a few emojis
                relevantEmojis = relevantEmojis.sort(() => 0.5 - Math.random()).slice(0, 4);
                
                switch (bioType) {
                    case 'personal':
                        bio = `${relevantEmojis[0]} ${keywordsList[0]} enthusiast | ${keywordsList.length > 1 ? keywordsList[1] : 'Dreamer'} ${relevantEmojis[1]}\n`;
                        bio += `Sharing my ${keywordsList.length > 2 ? keywordsList[2] : 'journey'} and ${keywordsList.length > 3 ? keywordsList[3] : 'adventures'} ${relevantEmojis[2]}\n`;
                        bio += `"${inspirationalQuotes[Math.floor(Math.random() * inspirationalQuotes.length)]}" ${relevantEmojis[3]}`;
                        break;
                    case 'business':
                        bio = `${relevantEmojis[0]} ${keywordsList[0]} ${keywordsList.length > 1 ? '| ' + keywordsList[1] : ''} ${relevantEmojis[1]}\n`;
                        bio += `Helping you ${keywordsList.length > 2 ? keywordsList[2] : 'achieve your goals'} through ${keywordsList.length > 3 ? keywordsList[3] : 'innovative solutions'}\n`;
                        bio += `📩 DM for inquiries or collaborations\n`;
                        bio += `🔗 yourbusinesswebsite.com`;
                        break;
                    case 'creator':
                        bio = `✨ Content Creator | ${keywordsList[0]} ${keywordsList.length > 1 ? '& ' + keywordsList[1] : ''}\n`;
                        bio += `${relevantEmojis[0]} ${keywordsList.length > 2 ? 'Sharing ' + keywordsList[2] : 'Sharing inspiration'} every day\n`;
                        bio += `${relevantEmojis[1]} Collabs: youremail@domain.com\n`;
                        bio += `${relevantEmojis[2]} New content every ${['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'][Math.floor(Math.random() * 7)]}`;
                        break;
                    case 'minimalist':
                        bio = `${keywordsList[0]} ${relevantEmojis[0]}\n`;
                        bio += `${keywordsList.length > 1 ? keywordsList[1] : 'Simplicity'} ${relevantEmojis[1]}\n`;
                        bio += `${keywordsList.length > 2 ? keywordsList[2] : 'Minimalism'} ${relevantEmojis[2]}`;
                        break;
                    case 'funny':
                        bio = `Professional ${keywordsList[0]} ${keywordsList.length > 1 ? '& ' + keywordsList[1] + ' enthusiast' : 'enthusiast'} ${relevantEmojis[0]}\n`;
                        bio += `${funnyQuotes[Math.floor(Math.random() * funnyQuotes.length)]} ${relevantEmojis[1]}\n`;
                        bio += `Warning: May talk about ${keywordsList.length > 2 ? keywordsList[2] : 'random things'} excessively ${relevantEmojis[2]}`;
                        break;
                }
                
                // Display bio
                document.getElementById('bio-output').innerHTML = bio.replace(/\n/g, '<br>');
                document.getElementById('bio-result').style.display = "block";
                
                document.getElementById('generate-bio-btn').innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path>
                    </svg>
                    Create Bio
                `;
                
                // Scroll to result
                document.getElementById('bio-result').scrollIntoView({ behavior: 'smooth', block: 'start' });
            }, 1500);
        }
        
        // Copy functions
        function copyTags() {
            const tagText = document.getElementById('tag-output').innerText;
            navigator.clipboard.writeText(tagText)
                .then(() => {
                    const successMsg = document.getElementById('tag-copy-success');
                    successMsg.style.display = 'block';
                    setTimeout(() => {
                        successMsg.style.display = 'none';
                    }, 2000);
                })
                .catch(err => {
                    alert('Failed to copy tags: ' + err);
                });
        }
        
        function copyBio() {
            const bioText = document.getElementById('bio-output').innerText;
            navigator.clipboard.writeText(bioText)
                .then(() => {
                    const successMsg = document.getElementById('bio-copy-success');
                    successMsg.style.display = 'block';
                    setTimeout(() => {
                        successMsg.style.display = 'none';
                    }, 2000);
                })
                .catch(err => {
                    alert('Failed to copy bio: ' + err);
                });
        }
        
